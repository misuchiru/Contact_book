<h2>家訪紀錄</h2>
<br>
<table class="table">
  <tr>
    <td>姓名：<%= @contact.name %></td>
    <td>支部：<%= @contact.district.chapter.title %></td>
    <td>地區：<%= @contact.district.title %></td>
  </tr>
  <tr>
    <td>手機：<%= @contact.cell_phone %></td>
    <td>市話：<%= @contact.phone %></td>
  </tr>
</table>
<hr>
<%= link_to "新增紀錄", new_visit_path(contact_id: @contact.id), class: "btn btn-primary" %>
<table class="table">
  <thead>
    <tr>
      <th>序</th>
      <th>時間</th>
      <th>家訪紀錄</th>
      <th>刪除</th>
    </tr>
  </thead>
  <tbody>
    <% @visits.each_with_index do |visit, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= visit.visit_time.strftime("%F") %></td>
        <td><%= visit.description %></td>
        <td><%= link_to fa_icon("trash", text: "刪除"), visit_path(visit), method: :delete, data: { confirm: "確定要刪除？" }, class: "btn btn-sm btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
