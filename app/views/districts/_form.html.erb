<%= simple_form_for(district) do |f| %>
  <%= f.association :chapter, label: "支部" %>
  <%= f.input :title, label: "名稱" %>
<% end %>
<hr>
<div class="form-inline text-center">
  <%= link_to fa_icon("arrow-left", text: "回地區列表"), districts_path, class: "btn btn-default" %>
  <%= button_tag type: 'submit', class: "btn btn-sm btn-primary" do %>
    <i class="fa fa-check" aria-hidden="true"></i>
    送出
  <% end %>
</div>
